#!/bin/bash
#site remote connect -C -T ${0#${0%?}} $@

export SITE_PROFILE=$(${HOME}/.site/bin/activate)
source ~/.site/.scm/lib/libsh/libsite/libsite.sh

core:import net
function myssh() {
    local -i e

    local qdn=$1
    :net:portpersist . ${qdn} 22 3600
    e=$?

    [ $e -ne ${CODE_SUCCESS} ] || ssh $@

    return $?
}

myssh $@
