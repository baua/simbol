#!/bin/bash
# vim: tw=0:ts=4:sw=4:et:ft=bash

e=0
[ ! -f ${HOME}/.siterc ] || source ${HOME}/.siterc
if [ ${#SITE_SHELL} -gt 0 ]; then
    if [ -x "${SITE_SHELL}" ]; then
        if [ "${SITE_SHELL}" != "${BASH}" ]; then
            exec ${SITE_SHELL} $0 $@
        fi
    else
        echo "The request SITE_SHELL is invalid:" ${SITE_SHELL}
        e=2
    fi
fi

if [ $e -eq 0 ]; then
    maj=${BASH_VERSINFO[0]}
    min=${BASH_VERSINFO[1]}

    if [ ${maj} -ge 4 -a ${min} -ge 0 ]; then
        SITE_PROFILE=$(${HOME}/.site/bin/activate)
        e=$?
        if [ $e -eq 0 ]; then
            export SITE_PROFILE
            source ~/.site/.scm/lib/libsh/libsite/libsite.sh
            rm -f ${SITE_DEADMAN?}

            core:wrapper "$@"
            e=$?
        else
            echo "No site profiles active, either create a new one, or activate an existing one."
        fi
    else
        e=1
        echo "Your version of BASH is too old; export SITE_SHELL to override system bash."
    fi
fi

exit ${e}
